APP_NAME="LuSE Quantitative Platform"
APP_VERSION="0.1.0"
DEBUG=False
ENVIRONMENT=production

# Database
# Note: Host is 'postgres', matching the service name in docker-compose.prod.yml
DATABASE_URL=postgresql://postgres:password@postgres:5432/luse_quant
DB_ECHO=False
DB_PASSWORD=password

# Redis
# Note: Host is 'redis', matching the service name
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=prod-secret-key-change-this-in-real-deployment
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Optimization
MAX_PORTFOLIO_SIZE=50
OPTIMIZATION_SOLVER=ECOS
